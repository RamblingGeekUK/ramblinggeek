---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import RainingTech from '~/components/widgets/RainingTech.astro';
const metadata = {
  title: 'RamblingGeek - Wayne Taylor',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <RainingTech/>
  <Hero
    image={{ src: '~/assets/images/hero.png', alt: 'RamblingGeek Hero Image' }}
  >
    <Fragment slot="title">
      {['Hello Friends', 'Hello World', 'Welcome', 'Hey Friends'][Math.floor(Math.random() * 4)]}
    </Fragment>
  
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Code. Create. Tinker.</span>
      </span>
    </Fragment>
  </Hero>
  
  <BlogLatestPosts
    title="Ramblings"
    information={`Read the various Ramblings from my tinkering, with Raspberry Pi's, Microcontrollers.`}
  />

</Layout>
